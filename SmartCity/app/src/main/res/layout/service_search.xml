<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/service_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/smart_city_image"
    tools:context="org.gs1.smartcity.MainActivity">

    <TextView
        android:id="@+id/main_text"
        android:text="Smart City Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="40dp"
        android:paddingTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/service_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:background="#aaffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/service_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:text="Service List"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="#ff222222"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/service_name01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_list_text"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#ff222222"/>
        <TextView
            android:id="@+id/service_url01"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_name01"
            android:textSize="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:textColor="#ff222222"/>
        <Button
            android:id="@+id/go_button01"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/service_url01"
            android:layout_alignBaseline="@+id/service_url01"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:textSize="15dp"
            android:text="go"
            android:onClick="onGoClicked" />

    </RelativeLayout>

</RelativeLayout>
